<% provide(:title, "Add Approved Time Off") %>
      <h1 style="text-align: center;">Approved Time Off for <%=@user.name%></h1>
<div class="login">
      <%= form_for(@user.ato.new, url: "/ato/create?id=#{@user.id}") do |f| %>
            <%= f.label(:a_date, "Date of Time Off") %><br>
            <%= f.date_select(:a_date, :order => [:month, :day, :year]) %>
            <br>
            <%= f.label "Reason"%><br>
            <%= f.text_area :reason, placeholder: "Reason for time off...", class: "textarea" %>
            <br>
            <%= f.label "Hours"%><br>
            <%= f.number_field :hours%>
            <br>
            <%= f.submit "Save ATO", class: "loginField" %>
</div>
<%current_user.name%>
<%#= debug(current_user.name) if Rails.env.development? %>
<% end %>